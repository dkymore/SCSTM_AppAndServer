<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_reserve"
    android:layout_width="300dp"
    android:layout_height="60dp"
    android:background="@color/Gray">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/View8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_reserve_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22/11/13 13:00"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/item_reserve_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下午 2人"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_reserve_use"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:text="未使用"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/View8"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="center" />

    <View
        android:id="@+id/View8"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_div_h_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_reserve_use"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>